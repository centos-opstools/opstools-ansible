    "sensu-check-" + check.name + ".json.j2",
    "sensu-check-pcs.json.j2"
] %}
{% endfor %}
{% endif %}
{% if sensu_manage_checks_oschecks %}
{% for check in sensu_remote_checks %}
{{ comma() }}
